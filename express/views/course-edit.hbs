<h1>Редактировать курс {{course.title}}</h1>

<form action="/courses/edit" method="POST" class="course-form">
    <div class="input-field">
        <input value="{{course.title}}"name="title" placeholder="Название курса" id="title" type="text" class="validate" required>
        <label for="title">Название курса</label>
        <span class="helper-text" data-error="Введите название курса"></span>
    </div>

    <div class="input-field">
        <input value="{{course.price}}"name="price" placeholder="Ценна курса" id="price" type="number" class="validate" required min="1">
        <label for="price">Ценна курса</label>
        <span class="helper-text" data-error="Введите цену"></span>
    </div>

    <div class="input-field">
        <input value="{{course.img}}"name="img" placeholder="URL изображения" id="img" type="text" class="validate" required>
        <label for="img">URL изображения</label>
        <span class="helper-text" data-error="Введите url изображения"></span>
    </div>
    <input type="hidden" name="id" value="{{course.id}}">

    <button type="submit" class="btn btn-primary">
        Редактировать
    </button>
</form>

<form action="/courses/remove" method="POST">
    <input type="hidden" name="id" value="{{course.id}}">
    <button type="submit" class="btn red mt-1">
        Удалить курс
    </button>
</form>