<h1>Добавить новый курс</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input name="title" placeholder="Название курса" id="title" type="text" class="validate" required>
        <label for="title">Название курса</label>
        <span class="helper-text" data-error="Введите название курса"></span>
    </div>

    <div class="input-field">
        <input name="price" placeholder="Ценна курса" id="price" type="number" class="validate" required min="1">
        <label for="price">Ценна курса</label>
        <span class="helper-text" data-error="Введите цену"></span>
    </div>

    <div class="input-field">
        <input name="img" placeholder="URL изображения" id="img" type="text" class="validate" required>
        <label for="img">URL изображения</label>
        <span class="helper-text" data-error="Введите url изображения"></span>
    </div>

    <button class="btn btn-primary">
        Добавить курс
    </button>
</form>